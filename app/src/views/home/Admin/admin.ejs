                    <div class="my-1"></div> <!-- Espacio de separación -->
                    <div class="bg-gradient-to-r from-cyan-300 to-cyan-500 h-px mb-6"></div> <!-- Línea con gradiente -->
                    <table id="" class="display" style="width:100%">
                        <thead>
                            <tr class="text-sm leading-normal">
                                <th class="w-10 py-2 px-4 text-left bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">요청번호</th>
                                <th class="w-24 py-2 px-4 text-left bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">아이디</th>
                                <th class="w-80 py-2 px-4 text-left bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">URL</th>
                                <th class="py-2 px-4 text-left bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">요청시각</th>
                                <th class="w-10 py-2 px-4 text-left bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">진행상태</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% const sortedResults = results_info.sort((a, b) => b.num - a.num); %>
                            <% sortedResults.forEach(result => { %>
                                <tr class="hover:bg-grey-lighter">
                                    <td class="py-2 px-4 border-b border-grey-light"><%= result.num %></td>
                                    <td class="py-2 px-4 border-b border-grey-light"><%= result.id %></td>
                                    <td class="py-2 px-4 border-b border-grey-light"><%= result.url %></td>
                                    <td class="py-2 px-4 border-b border-grey-light"><%= result.date %>
                                    </td>
                                    <td class="py-2 px-4 border-b border-grey-light">
                                        <% if (result.process === 'work') { %>
                                            진행
                                        <% } else if (result.process === 'done') { %>
                                            완료
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                        <tfoot>
                            <tr class="text-sm leading-normal">
