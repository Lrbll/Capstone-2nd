<!-- component -->
<!DOCTYPE html>
<html lang="es">
<head>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <title>Hook</title>
    <!-- Adding dataTable style cdn -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <!-- Adding JQuery cdn -->
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <!-- Adding dataTable cdn -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <!-- metisMenu stylesheet -->
    <link rel="stylesheet" href="./assets/lib/metismenu/metisMenu.css">
    <!-- Initializing datatable -->
    <script>        	
        $(document).ready(function() {
            $('table.display').DataTable();
        });
        // new DataTable('table.display');
    </script>
</head>
<body>
<div class="flex flex-col bg-neutral-400">

    <!-- Barra de navegación superior -->
    <div class="bg-zinc-800 text-white shadow w-full py-3.5 px-4 flex items-center justify-between">
        <div class="flex items-center">
            <div class="flex">
                <img src="/img/JBU_logo.png" class="flex h-9 mx-2" alt="중부대 로고"/>
                <a href="/">
                    <img src="/img/Hook_logo.png" class="h-9 invert" alt="Hook 로고" />
                </a>
                <h2 class="font-bold text-2xl ml-6 my-auto"><a href="/admin">Admin Page</a></h2>
            </div>
            <div class="md:hidden flex items-center"> <!-- Se muestra solo en dispositivos pequeños -->
                <button id="menuBtn">
                    <i class="fas fa-bars text-gray-500 text-lg"></i> <!-- Ícono de menú -->
                </button>
            </div>
        </div>
        <form action="/auth/logout" method="post">
            <button type="submit" class="block text-gray-500 py-2.5 px-4 my-2 rounded transition duration-200 hover:bg-gradient-to-r hover:from-cyan-500 hover:to-cyan-500 hover:text-white mt-auto">
                <i class="fas fa-sign-out-alt mr-2"></i>sign out
            </button>
        </form>
    </div>

    <!-- 콘텐츠 영역 -->
    <div class="flex-1 flex flex-wrap  min-h-screen">
        <!-- 사이드 바 영역 -->
        <div class="p-2 bg-neutral-900 w-full md:w-60 flex flex-col md:flex" id="sideNav">
            <nav>
                <a class="block text-neutral-50 py-2.5 px-4 my-4 rounded transition duration-200 hover:bg-gradient-to-r hover:from-cyan-500 hover:to-cyan-500 hover:text-white" href="/admin">
                    <i class="fas fa-home w-9"></i>전체보기
                </a>
                <a class="block text-neutral-50 py-2.5 px-4 my-4 rounded transition duration-200 hover:bg-gradient-to-r hover:from-cyan-500 hover:to-cyan-500 hover:text-white" href="/admin/show/userList">
                    <i class="fas fa-users w-9"></i>회원 정보
                </a>
                <a class="block text-neutral-50 py-2.5 px-4 my-4 rounded transition duration-200 hover:bg-gradient-to-r hover:from-cyan-500 hover:to-cyan-500 hover:text-white" href="/admin/show/requestList">
                    <i class="fas fa-exchange-alt w-9"></i>진단 요청
                </a>
            </nav>
        </div>

        <!-- 콘텐츠 영역 -->
        <div class="flex-1 p-4 w-full md:w-1/2">

            <!-- 진단요청 영역 -->
            <div class="mt-8 bg-white p-4 shadow rounded-lg">
                <div class="bg-white p-4 rounded-md mt-4">
                    <h2 class="text-gray-500 text-lg font-semibold pb-4">진단 요청</h2>
                    <div class="my-1"></div> <!-- Espacio de separación -->
                    <div class="bg-gradient-to-r from-cyan-300 to-cyan-500 h-px mb-6"></div> <!-- Línea con gradiente -->
                    <table id="" class="display" style="width:100%">
                        <thead>
                            <tr class="text-sm leading-normal">
                                <th class="w-10 py-2 px-4 text-left bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">요청번호</th>
                                <th class="w-24 py-2 px-4 text-left bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">아이디</th>
                                <th class="w-80 py-2 px-4 text-left bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">URL</th>
                                <th class="py-2 px-4 text-left bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">요청시각</th>
                                <th class="w-10 py-2 px-4 text-left bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">진행상태</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% const sortedResults = results_info.sort((a, b) => b.num - a.num); %>
                            <% sortedResults.forEach(result => { %>
                                <tr class="hover:bg-grey-lighter">
                                    <td class="py-2 px-4 border-b border-grey-light"><%= result.num %></td>
                                    <td class="py-2 px-4 border-b border-grey-light"><%= result.id %></td>
                                    <td class="py-2 px-4 border-b border-grey-light"><%= result.url %></td>
                                    <td class="py-2 px-4 border-b border-grey-light"><%= result.date %>
                                    </td>
                                    <td class="py-2 px-4 border-b border-grey-light">
                                        <% if (result.process === 'work') { %>
                                            진행
                                        <% } else if (result.process === 'done') { %>
                                            완료
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                        <tfoot>
                            <tr class="text-sm leading-normal">
                                <th class="py-2 px-4 text-left bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">요청번호</th>
                                <th class="py-2 px-4 text-left bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">아이디</th>
                                <th class="py-2 px-4 text-left bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">URL</th>
                                <th class="py-2 px-4 text-left bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">요청시각</th>
                                <th class="py-2 px-4 text-left bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">진행상태</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>